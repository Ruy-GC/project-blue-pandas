{% extends "base.jinja" %}

{% block title %} Education {% endblock %}


{% block content %}

    <div class = "container">
        <div class = "page-title">
            <h1>{{title}}'s background<span>Work and Education</span></h1>
        </div>

        <div class="subtitle">
            <h1 class = "text-left" style = "margin-top:50px;">Education</h1>
        </div>

        <hr/>
            <div>
                <img style='vertical-align: middle; height: 90px; display: inline-block; float:left;' src="../static/img/education.png" alt="" style = "border-radius: 10px;">
                <div style=' text-align: left; padding: 15px 0; display: inline-block; margin-left: 30px'>
                    <h4 class = "text-left">{{uni_name}}</h4>
                    <h4 class = "text-left">Mayor in {{majors}}</h4>
                </div>
            </div>
        <hr/>
        <div class="subtitle">
            <h1 class = "text-left" style = "margin-top:30px;">Work Experience</h1>
        </div>

        <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
            <ol class="carousel-indicators">
                <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
                {% for i in range(1, companies|length)%}
                <li data-target="#carouselExampleIndicators" data-slide-to={{i|string}}></li>
                {% endfor %}
            </ol>
            <div class="carousel-inner">
                <div class="carousel-item active">
                    <img class="d-block w-100" src="../static/img/work.jpg" alt="First slide" style = "border-radius: 10px;">
                    <div class="carousel-caption d-none d-md-block">
                        <h5 style = "font-size:30px">{{companies['0']}}</h5>
                        <p style = "font-size:20px">{{workexperiences['0']}}</p>
                    </div>
                </div>
            {% for i in range(1,companies|length)%}
                <div class="carousel-item">
                    <img class="d-block w-100" src="../static/img/work.jpg" alt="" style = "border-radius: 10px;">
                    <div class="carousel-caption d-none d-md-block">
                        <h5 style = "font-size:30px">{{companies[i|string]}}</h5>
                        <p style = "font-size:20px">{{workexperiences[i|string]}}</p>
                    </div>
                </div>
            {% endfor %}
            </div>
            <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="sr-only">Previous</span>
            </a>
            <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="sr-only">Next</span>
            </a>
        </div>
    </div>

{% endblock%}



