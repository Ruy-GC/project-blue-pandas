{% extends "base.html" %}

{% block title %} Timeline {% endblock %}

{% block scripts %} 

    <script type="text/javascript" src = "../static/scripts/requests/timeline.js"></script>

{% endblock %}

{% block content %}
{% include "navbar.html" %}

    <div class = "container">
        <div class = "page-title">
            <h1>Timeline<span>Progression</span></h1>
        </div>
    </div>
    <div class = "container">
        <h2 class = "text-center">Add new post</h2>
        <form id = "timeline-form">
            <input class = "form-input" type = "text" name = "name" placeholder = "Name" required/>
            <input class = "form-input" type = "email" name = "email" placeholder = "Email" required/>
            <input class = "form-input" type = "text" name = "content" placeholder = "Content" required/>
            <input type = "submit" class = "btn-user" value = "Submit">
        </form>


        <div id = "timeline">

        </div>
        
    </div>

    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                    <div class="card-body">
                        <div class="hori-timeline" dir="ltr">
                            <ul class="list-inline events" id ="eventList">
                            <!-- Rendered elements based on request-->
                            </ul>
                        </div>
                    </div>
            </div>
        </div>
    </div>

{% endblock %}
